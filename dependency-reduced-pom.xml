<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.usf.cutr.realtime.hart</groupId>
  <artifactId>cutr-gtfs-realtime-hart</artifactId>
  <name>cutr-gtfs-realtime-hart</name>
  <version>0.0.1-SNAPSHOT</version>
  <url>https://github.com/CUTR-at-USF/HART-GTFS-realtimeGenerator/wiki/</url>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/CUTR-at-USF/HART-GTFS-realtimeGenerator/issues</url>
  </issueManagement>
  <scm>
    <connection>scm:git:http://github.com/CUTR-at-USF/HART-GTFS-realtimeGenerator.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/CUTR-at-USF/HART-GTFS-realtimeGenerator.git</developerConnection>
    <url>http://github.com/CUTR-at-USF/HART-GTFS-realtimeGenerator</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedClassifierName>withAllDependencies</shadedClassifierName>
              <transformers>
                <transformer>
                  <mainClass>edu.usf.cutr.realtime.hart.HartToGtfsRealtimeMain</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>public.onebusaway.org</id>
      <url>http://nexus.onebusaway.org/content/groups/public/</url>
    </repository>
    <repository>
      <id>local</id>
      <name>local</name>
      <url>file://${basedir}/libs</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>com.microsoft.sqlserver</groupId>
      <artifactId>sqljdbc4</artifactId>
      <version>4</version>
      <scope>system</scope>
      <systemPath>C:\Users\HanTam\git\HART-GTFS-realtimeGenerator/libs/sqljdbc4.jar</systemPath>
    </dependency>
  </dependencies>
</project>

